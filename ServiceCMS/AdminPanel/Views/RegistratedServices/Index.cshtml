@using Modules.Resources
@Scripts.Render("~/bundles/registratedServices")
@{
    ViewBag.Title = Presentation.RegistredServices;
}


<div ng-controller="RegistratedServicesController">
    <script id="myPopoverTemplate.html" type="text/ng-template">
        <div class="form-group form-field row">
            <div class="col-md-12">
                <label class="control-label">@Presentation.ClientName</label>
                <span ng-bind="service.ClientName"></span>
            </div>
        </div>
        <div class="form-group form-field row">
            <div class="col-md-12">
                <label class="control-label">@Presentation.Surname</label>
                <span ng-bind="service.ClientSurname"></span>
            </div>
        </div>
        <div class="form-group form-field row">
            <div class="col-md-12">
                <label class="control-label">@Presentation.PhoneNumber</label>
                <span ng-bind="service.ClientPhoneNumber"></span>
            </div>
        </div>
        <div class="form-group form-field row">
            <div class="col-md-12">
                <label class="control-label">@Presentation.Email</label>
                <span ng-bind="service.ClientEmail"></span>
            </div>
        </div>
    </script>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-striped kentico-color">
            <thead>
                <tr>
                    <th class="text-center">
                        @Presentation.StartDate
                    </th>
                    <th class="text-center">
                        @Presentation.ServiceType
                    </th>
                    <th class="text-center">
                        @Presentation.Client
                    </th>
                    <th class="text-center">
                        @Presentation.ServiceProvider
                    </th>
                    <th class="text-center">
                        @Presentation.Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="service in services">
                    <td ng-bind="service.StartDate | date:'yyyy-MM-dd HH:mm:ss'" class="text-center"></td>
                    <td ng-bind="service.ServiceType.Name" class="text-center"></td>
                    <td class="text-center"><span class="fa fa-user fa-2x fa-hover" uib-popover-template="dynamicPopover.templateUrl" popover-title="@Presentation.ClientData" popover-placement="left" popover-trigger="mouseenter"></span></td>
                    <td ng-bind="service.ServiceProvider.Name" class="text-center"></td>
                    <td class="text-center">                   
                        <a ng-click="delete(service)"><span class="glyphicon glyphicon-remove text-danger"></span></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
</div>