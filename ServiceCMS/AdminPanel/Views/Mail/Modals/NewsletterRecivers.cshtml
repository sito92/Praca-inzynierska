@using Modules.Resources
@using Logic.Common.Models
@model NewsModel
<div class="modal-header">
    <div class="row text-center">
        <h2 class="text-modal-heading">@Presentation.NewsletterRecivers</h2>
    </div>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6" style="margin-bottom: 10px;">
            <div class="btn kentico-color" ng-click="add()">@Presentation.Add</div>
        </div>
    </div>
    <table class="table table-bordered table-striped kentico-color" ng-show="recivers.length >0">
        <thead>
        <tr>
            <th class="text-center">
                @Presentation.EmailAddress
            </th>
            <th class="text-center">
                @Presentation.Actions
            </th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="reciver in recivers">
            <td ng-bind="reciver.EmailAddress" class="text-center"></td>
            <td class="text-center">
                <a ng-click="edit(reciver)"><span class="glyphicon glyphicon-edit text-success"></span></a>
                <a ng-click="delete(reciver)"><span class="glyphicon glyphicon-remove text-danger"></span></a>
            </td>
        </tr>
        </tbody>
    </table>
    <span ng-show="recivers.length <=0">@Presentation.NoRecivers</span>
</div>
<div class="modal-footer">
    <button class="btn btn-default" ng-click="cancel()">@Presentation.Close</button>
</div>
