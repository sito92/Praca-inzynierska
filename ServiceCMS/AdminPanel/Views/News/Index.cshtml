@using Modules.Resources
@{
    ViewBag.Title = "Index";
}
@Scripts.Render("~/bundles/news")
<div ng-controller="NewsController">
    @Html.Partial("Menu")
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Presentation.Name
                        </th>
                        <th>
                            @Presentation.CreationDate
                        </th>
                        <th>
                            @Presentation.LastModifyDate
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="news in newses" ng-click="select(news)" ng-class="{'selected':selectedNews.Id==news.Id}" class="selectable">
                        <td ng-bind="news.Title"></td>
                        <td ng-bind="news.CreationTimeStamp | date:'dd-MM-yyyy HH:mm:ss'"></td>
                        <td ng-bind="news.LastModifiedTimeStamp | date:'dd-MM-yyyy HH:mm:ss'"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>