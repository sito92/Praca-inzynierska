@using Modules.Resources
@using Logic.Common.Models
@model NewsModel
<div class="modal-header">
    <div class="row text-center">
        <h2 class="text-modal-heading">@Presentation.NewsCategories</h2>
    </div>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6" style="margin-bottom: 10px;">
            <div class="btn kentico-color" ng-click="add()">@Presentation.Add</div>
        </div>
    </div>
    <table class="table table-bordered table-striped kentico-color" ng-show="categories.length >0">
        <thead>
            <tr>
                <th class="text-center">
                    @Presentation.Name
                </th>
                <th class="text-center">
                    @Presentation.Actions
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="category in categories">
                <td ng-bind="category.Category" class="text-center"></td>
                <td class="text-center">
                    <a ng-click="edit(category)"><span class="glyphicon glyphicon-edit text-success"></span></a>
                    <a ng-click="delete(category)"><span class="glyphicon glyphicon-remove text-danger"></span></a>
                </td>
            </tr>
        </tbody>
    </table>
    <span ng-show="categories.length <=0">@Presentation.NoCategories</span>
</div>
<div class="modal-footer">
    <button class="btn btn-default" ng-click="cancel()">@Presentation.Close</button>
</div>
