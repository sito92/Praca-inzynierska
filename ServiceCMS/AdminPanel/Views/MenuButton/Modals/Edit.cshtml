@using Modules.Resources
@using Logic.Common.Models

<script type="text/ng-template" id="nodes_renderer.html">
    <div ui-tree-handle class="button-box">
        <a class="btn kentico-color btn-xs ng-scope" ng-if=" node.Children.length > 0" data-nodrag="" ng-click="toggle(this)">
            <span class="glyphicon glyphicon-chevron-down" ng-class="{'glyphicon-chevron-right': collapsed,'glyphicon-chevron-down': !collapsed}"></span>
        </a>
        <span ng-bind="node.Content"></span>
        <span ng-show="node.Content == null || node.Content== ''">@Presentation.NoName</span>
        <a class="pull-right btn btn-danger btn-xs" data-nodrag ng-click="remove(this)"><span class="glyphicon glyphicon-remove"></span></a>
        <a class="pull-right btn btn-success btn-xs" data-nodrag ng-click="addNode(this)" style="margin-right: 8px;"><span class="glyphicon glyphicon-plus"></span></a>
        <a class="pull-right btn btn-primary btn-xs" data-nodrag ng-click="editNode(node)" style="margin-right: 8px;"><span class="glyphicon glyphicon-edit"></span></a>
    </div>
    <ol ui-tree-nodes="" ng-model="node.Children" ng-class="{hidden: collapsed}">
        <li ng-repeat="node in node.Children" ui-tree-node ng-include="'nodes_renderer.html'">
        </li>
    </ol>
</script>

@model NewsModel
<div class="modal-header">
    <div class="row text-center">
        <h2 class="text-modal-heading">@Presentation.Edit</h2>
    </div>
</div>
<div class="modal-body">
    <div class="row">
        <div class="button-box">
            <span ng-bind="rootButton.Content"></span>
            <span ng-show="rootButton.Content == null || rootButton.Content== ''">@Presentation.NoName</span>        
            <a class="pull-right btn btn-success btn-xs" data-nodrag ng-click="addMainButton()" style="margin-right: 8px;"><span class="glyphicon glyphicon-plus"></span></a>
            <a class="pull-right btn btn-primary btn-xs" data-nodrag ng-click="editNode(rootButton)" style="margin-right: 8px;"><span class="glyphicon glyphicon-edit"></span></a>
        </div>
        <div class="col-md-8 col-md-offset-1">
            <div data-ui-tree="treeOptions">
                <ol ui-tree-nodes="" ng-model="rootButton.Children" id="tree-root">
                    <li ng-repeat="node in rootButton.Children" ui-tree-node ng-include="'nodes_renderer.html'"></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn kentico-color" ng-disabled="form.$invalid" ng-click="save()">@Presentation.Save</button>
    <button class="btn btn-default" ng-click="cancel()">@Presentation.Cancel</button>
</div>
