@using Modules.Resources
@using Logic.Common.Models

<script type="text/ng-template" id="nodes_renderer.html">
    <div ui-tree-handle class="button-box">
        <a class="btn btn-success btn-xs ng-scope" ng-if="node.nodes &amp;&amp; node.Children.length > 0" data-nodrag="" ng-click="toggle(this)">
            <span class="glyphicon glyphicon-chevron-down" ng-class="{'glyphicon-chevron-right': collapsed,'glyphicon-chevron-down': !collapsed}"></span>
        </a>
        {{node.Content}}
        <a class="pull-right btn btn-danger btn-xs" data-nodrag ng-click="remove(this)"><span class="glyphicon glyphicon-remove"></span></a>
        <a class="pull-right btn btn-primary btn-xs" data-nodrag ng-click="newSubItem(this)" style="margin-right: 8px;"><span class="glyphicon glyphicon-plus"></span></a>
    </div>
    <ol ui-tree-nodes="" ng-model="node.Children" ng-class="{hidden: collapsed}">
        <li ng-repeat="node in node.Children" ui-tree-node ng-include="'nodes_renderer.html'">
        </li>
    </ol>
</script>

@model NewsModel
<div class="modal-header">
    <div class="row text-center">
        <h2 class="text-modal-heading">@Presentation.Edit</h2>
    </div>
</div>
<div class="modal-body">
    <div class="row">

        <div class="col-md-8 col-md-offset-1">
            <div data-ui-tree="treeOptions">
                <ol ui-tree-nodes="" ng-model="rootButton.Children" id="tree-root">
                    <li ng-repeat="node in rootButton.Children" ui-tree-node ng-include="'nodes_renderer.html'"></li>
                </ol>
            </div>
        </div>
        <div class="col-md-1" style="margin-top: 10px;">
            <button class="btn btn-success" ng-click="addMainButton()">@Presentation.Add</button>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-disabled="form.$invalid" ng-click="save()">@Presentation.Edit</button>
    <button class="btn btn-default" ng-click="cancel()">@Presentation.Cancel</button>
</div>
