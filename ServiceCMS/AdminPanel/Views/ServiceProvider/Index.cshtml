@using Modules.Resources
@Scripts.Render("~/bundles/serviceProvider")
<div ng-controller="ServiceProviderController">
    @Html.Partial("Menu")
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Presentation.Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="provider in providers" ng-click="select(provider)" ng-class="{'selected':selectedProvider.Id==provider.Id}" class="selectable">
                        <td ng-bind="provider.Name"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>