@using Modules.Resources
@Scripts.Render("~/bundles/serviceType")
@{
    ViewBag.Title = Presentation.ServiceTypes;
}
<div ng-controller="ServiceTypeController">
    @Html.Partial("Menu")
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-striped kentico-color">
                <thead>
                    <tr>
                        <th>
                            @Presentation.Name
                        </th>
                        <th class="text-center">
                            @Presentation.Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="type in serviceTypes track by type.Id">
                        <td ng-bind="type.Name"></td>
                        <td class="text-center">
                            <a ng-click="edit(type)"><span class="glyphicon glyphicon-edit text-success"></span></a>
                            <a ng-click="delete(type)"><span class="glyphicon glyphicon-remove text-danger"></span></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>